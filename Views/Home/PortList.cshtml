@{
}
@model List<Ports>

@{
    ViewData["Title"] = "PortList";
}

<h2>Port List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var port in Model)
        {
            <tr>
                <td>@port.Id</td>
                <td>@port.Code</td>
                <td>@port.Name</td>
                <td>@port.Latitude</td>
                <td>@port.Longitude</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #05668D;
        color: aliceblue;
    }

    thead {
        background-color: #A5BE00;
        color: aliceblue;
    }

    table {
        background-color: #EBF2FA;
    }
</style>