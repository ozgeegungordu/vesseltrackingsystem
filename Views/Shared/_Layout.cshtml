<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VesselTrackingSystem</title>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VesselTrackingSystem.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:#52762b;" asp-area="" asp-controller="Home" asp-action="Map">Vessel Tracking System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#045271;" asp-area="" asp-controller="Home" asp-action="VesselList">Vessels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#045271;" asp-area="" asp-controller="Home" asp-action="PortList">Ports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#045271;" asp-area="" asp-controller="Home" asp-action="ServiceList">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="color:#045271;" asp-area="" asp-controller="Home" asp-action="AddVessel">Add Vessel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#045271;" asp-area="" asp-controller="Home" asp-action="AddPort">Add Port</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#045271;" asp-area="" asp-controller="Home" asp-action="AddService">Add Service</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#EBF2FA">
        <div class="container" style="color:#045271; margin-top: auto; background-color:#EBF2FA">
        <p class="copyright">
            Copyright &copy; <span class="year">2024</span> by Özge Güngördü.
            All rights reserved.
        </p>
        </div>
    </footer>

    <script>
        const yearEl = document.querySelector(".year");
        const currentYear = new Date().getFullYear();
        yearEl.textContent = currentYear;
        </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
